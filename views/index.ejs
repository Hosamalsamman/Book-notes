<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="styles/main.css" />
  <title>Book Notes</title>
</head>

<body>
  <main>
    <% booknotes.forEach(booknote => { %>
      
      <div>
        <img src=<%= booknote.coverurl %> alt="">
        <h2><%= booknote.review %></h2>
        <p>Rating: <%= booknote.rating %></p>
        <form class="edit" action="/edit" method="post">
            <button name="editedItem" type="submit" class="btn btn-primary" value= <%= booknote.id %> >Edit</button>
        </form>
        <form class="delete" action="/delete" method="post">
            <button name="deletedItem" type="submit" class="btn btn-dark" value=<%= booknote.id %>>delete</button>
        </form>
    </div>
    <% }); %>
    
    <form class="add" action="/add" method="post">
        <button name="addedItem" type="submit" class="btn btn-success" value="book.id">add</button>
    </form>

  </main>
